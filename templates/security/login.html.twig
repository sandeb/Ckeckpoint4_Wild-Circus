{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="mt-5"><h1><br></h1></div>
<div class="mt-5"><h1><br></h1></div>
<div class="container col-lg-5 col-md-4">
    <div class="card bg-light mt-5 ">
        <div class="card-body">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}

                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-info">Please sign in</h1>
                <label class="text-info"for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label class="text-info mt-3" for="inputPassword">Password</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="btn btn btn-secondary mt-3" type="submit">
                    Sign in
                </button>
                <div class="text-info ">
                    <a class="text-info" href="{{ path('app_register') }}">no account go to register</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}







