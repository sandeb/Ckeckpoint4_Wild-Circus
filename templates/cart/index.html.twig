{% extends 'base.html.twig' %}

{% block title %}CART{% endblock %}
{% block body %}
    <div class="text-info">
        <h1 class="text-info">Cart</h1lasstext-info>
    </div>
    {% if items | length >0 %}
        <table class="table text-white">
            <thead>
                <tr>
                    <th>Show</th>
                    <th>Price</th>
                    <th>quantity</th>
                    <th>total</th>
                    <th>Buy</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.politico.title }}</td>
                    <td>{{ item.politico.price }}฿</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.politico.price * item.quantity }}</td>
                    <td>
                        <a href="{{ path('show_my')}}" class="btn btn-info btn-sm">
                            <i class="fa fa-credit-card-alt" aria-hidden="true"></i>
                        </a>

                    </td>
                    <td>
                        <a href="{{ path('cart_delete', {'id': item.politico.id}) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
           <tfoot>
               <tr>
                   <td colspan="3 text-right">Total</td>
                   <td> {{ total }}฿</td>
                   <td></td>
               </tr>
           </tfoot>
        </table>
    {% else  %}
        <p>Surprise, c'est vide !</p>
    {% endif %}

{% endblock %}
